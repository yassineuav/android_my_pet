<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="post"
            type="tech.siham.papp.models.Post" />
    </data>

    <LinearLayout
        android:padding="2dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="2dp"
            app:cardMaxElevation="5dp"
            android:shadowColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        app:imageUrl="@{post.user.imageUrl}"
                        tools:src="@mipmap/ic_launcher"
                        android:id="@+id/user_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/control_buttons"
                        android:layout_toEndOf="@+id/user_image"
                        android:orientation="vertical">

                        <TextView
                            android:text="@{post.user.username}"
                            android:id="@+id/text_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:text="UserName" />

                        <TextView
                            android:text="@{post.user.firstName +` `+ post.user.lastName}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            tools:text="first last name" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/control_buttons"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/time_ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:text="2 days ago"
                            tools:text="2 days ago" />

                        <ImageView
                            android:contentDescription="@string/app_name"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_more_horiz_24"
                            android:id="@+id/button_menu" />

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    app:imageUrl="@{post.imageUrl}"
                    android:layout_marginTop="10dp"
                    tools:src="@mipmap/ic_launcher"
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                   />

                <TextView
                    tools:text="@string/text_view"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="4dp"
                    android:text="@{post.description}"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            app:likedPost="@{post.liked}"
                            android:id="@+id/like_button"
                            android:contentDescription="@string/app_name"
                            android:layout_marginStart="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_favorite_border_24"/>

                        <TextView
                            android:text="@{post.likesCount.toString()}"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            tools:text="20"
                            />
                        <ImageView
                            android:rotationY="180"
                            android:layout_marginEnd="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_mode_comment_24"
                            tools:src="@drawable/ic_baseline_mode_comment_24"/>
                        </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
